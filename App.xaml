<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NextChatGPTForMAUI"
             x:Class="NextChatGPTForMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--FlyoutMenu明亮模式色彩-->
            <Color x:Key="FlyoutMenuLightBackground">White</Color>
            <Color x:Key="FlyoutMenuLightText">#000000</Color>
            <!--FlyoutMenu黑暗模式色彩-->
            <Color x:Key="FlyoutMenuDarkBackground">#36454f</Color>
            <Color x:Key="FlyoutMenuDarkText">#ffffff</Color>
            <!--ChatPage明亮模式色彩-->
            <Color x:Key="MainLightBackground">White</Color>
            <Color x:Key="ChatBorderLightBackground">#dcdcdc</Color>
            <Color x:Key="InputBorderLightBackground">#dcdcdc</Color>
            <!--ChatPage黑暗模式色彩-->
            <Color x:Key="MainDarkBackground">Gray</Color>
            <Color x:Key="ChatBordeDarkBackground">#36454f</Color>
            <Color x:Key="InputBorderDarkBackground">#36454f</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
