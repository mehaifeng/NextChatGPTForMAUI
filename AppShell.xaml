<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NextChatGPTForMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:NextChatGPTForMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    FlyoutWidth="230"
    FlyoutBackdrop="transparent"
    FlyoutBackground="{AppThemeBinding Light={StaticResource FlyoutMenuLightBackground},Dark={StaticResource FlyoutMenuDarkBackground}}">
    <Shell.ItemTemplate>
        <DataTemplate>
            <Border
                Padding="20"
                StrokeThickness="0"
                Background="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Grid
                    Padding="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        FontSize="24"
                        FontFamily="iconfont"
                        Text="{Binding Icon}"
                        TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuLightText},Dark={StaticResource FlyoutMenuDarkText}}"/>
                    <Label 
                        Grid.Column="1"
                        VerticalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Start"
                        Text="{Binding Title}"
                        TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuLightText},Dark={StaticResource FlyoutMenuDarkText}}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Shell.ItemTemplate>
    <FlyoutItem
        Title="对话"
        Route="NextChatGPTForMAUI.Views.ChatPage"
        Icon="&#xe8e8;">
        <ShellContent ContentTemplate="{DataTemplate view:ChatPage}"/>
    </FlyoutItem>
    <FlyoutItem
        Title="历史对话"
        Route="NextChatGPTForMAUI.Views.HistoryChat"
        Icon="&#xe640;">
        <ShellContent ContentTemplate="{DataTemplate view:HistoryChat}"/>
    </FlyoutItem>
    <FlyoutItem
        Title="参数控制"
        Route="NextChatGPTForMAUI.Views.ParameterConfig"
        Icon="&#xe625;">
        <ShellContent ContentTemplate="{DataTemplate view:ParameterConfig}"/>
    </FlyoutItem>
    <FlyoutItem
        Title="关于"
        Route="NextChatGPTForMAUI.Views.AboutPage"
        Icon="&#xe7a6;">
        <ShellContent ContentTemplate="{DataTemplate view:AboutView}"/>
    </FlyoutItem>

</Shell>
