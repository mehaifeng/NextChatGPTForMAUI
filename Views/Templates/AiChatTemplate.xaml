<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="NextChatGPTForMAUI.Views.Templates.AiChatTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:NextChatGPTForMAUI.Converters"
    xmlns:model="clr-namespace:NextChatGPTForMAUI.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viemodels="clr-namespace:NextChatGPTForMAUI.Viewmodels"
    x:Name="AiBox"
    x:DataType="model:ChatModel">
    <Grid.Resources>
        <converters:MessageConverter x:Key="MessageConverter" />
    </Grid.Resources>
    <SwipeView>
        <Grid Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".1*" />
                    <ColumnDefinition Width=".9*" />
                </Grid.ColumnDefinitions>
                <Entry
                    Grid.Column="0"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Start"
                    IsReadOnly="True"
                    Placeholder="ðŸ˜Š"
                    Text="{Binding AIFace}" />
                <HorizontalStackLayout
                    x:Name="MessageMenu"
                    Grid.Column="1"
                    HeightRequest="35"
                    IsVisible="{Binding MessageMenuState}"
                    Spacing="5">
                    <Border
                        BackgroundColor="#0a75ad"
                        StrokeShape="RoundRectangle 10,10,10,10"
                        WidthRequest="50">
                        <Label
                            FontSize="Small"
                            HorizontalOptions="Center"
                            Text="ç¼–è¾‘"
                            TextColor="White"
                            VerticalOptions="Center" />
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border
                        BackgroundColor="#6f4a95"
                        StrokeShape="RoundRectangle 10,10,10,10"
                        WidthRequest="50">
                        <Label
                            FontSize="Small"
                            HorizontalOptions="Center"
                            Text="å¤åˆ¶"
                            TextColor="White"
                            VerticalOptions="Center" />
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border
                        BackgroundColor="#91352f"
                        StrokeShape="RoundRectangle 10,10,10,10"
                        WidthRequest="50">
                        <Label
                            FontSize="Small"
                            HorizontalOptions="Center"
                            Text="åˆ é™¤"
                            TextColor="White"
                            VerticalOptions="Center" />
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                    </Border>
                </HorizontalStackLayout>
            </Grid>
            <Border
                x:Name="MessageBox"
                Grid.Row="1"
                Padding="10,0,10,0"
                BackgroundColor="{AppThemeBinding Light={StaticResource AiChatBoxLightBackground},
                                                  Dark={StaticResource AiChatBoxDarkBackground}}"
                HorizontalOptions="Start"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Editor
                    x:Name="AiEditor"
                    AutoSize="TextChanges"
                    HorizontalOptions="Center"
                    IsReadOnly="True"
                    Text="{Binding Text, Mode=TwoWay, UpdateSourceEventName=TextChanged}"
                    TextColor="{AppThemeBinding Light={StaticResource AiChatBoxLightTextColor},
                                                Dark={StaticResource AiChatBoxDarkTextColor}}"
                    Unfocused="Editor_Unfocused"
                    VerticalOptions="Center">
                    <Editor.Behaviors>
                        <toolkit:TouchBehavior
                            x:DataType="viemodels:ChatPageViewModel"
                            BindingContext="{viemodels:ChatPageViewModel}"
                            LongPressCommand="{Binding ShowMessageMenuCommand}"
                            LongPressCommandParameter="{x:Reference MessageMenu}"
                            LongPressDuration="650" />
                    </Editor.Behaviors>
                </Editor>
            </Border>
        </Grid>
    </SwipeView>
</Grid>