<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:model="clr-namespace:NextChatGPTForMAUI.Models"
      xmlns:viemodels="clr-namespace:NextChatGPTForMAUI.Viewmodels"
      x:Class="NextChatGPTForMAUI.Views.Templates.UserChatTemplate"
      x:DataType="model:ChatModel">
    <Border
        HorizontalOptions="End"
        StrokeShape="RoundRectangle 10,10,10,10"
        Margin="10,10,10,10"
        Padding="10,0,10,0"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightSendBoxColor}, Dark={StaticResource DarkSendBoxColor}}">
        <Editor
            AutoSize="TextChanges"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsReadOnly="True"
            TextColor="{AppThemeBinding Light={StaticResource LightSendBoxTextColor},Dark={StaticResource DarkSendBoxTextColor}}"
            Text="{Binding Text, Mode=TwoWay}"/>
    </Border>
</Grid>